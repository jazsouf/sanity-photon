    "react-dom": "^19.1.0",
    "sanity": "^3.88.2",
    "sonner": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.13",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
