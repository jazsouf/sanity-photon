{
  "name": "sanity-photon",
  "description": "Next.js + Sanity + Shopify starter",
  "scripts": {
    "predev": "concurrently \"npm run predev --workspace=storefront\" \"npm run predev --workspace=studio\"",
    "dev": "concurrently \"npm run dev --workspace=storefront\" \"npm run dev --workspace=studio\"",
    "dev:storefront": "npm run dev --workspace=storefront",
    "dev:studio": "npm run dev --workspace=studio",
    "validate": "sanity-template-validate"
  },
  "keywords": [
    "Sanity",
    "Shopify",
    "Next.js",
    "Headless CMS",
    "Ecommerce",
    "Visual Editing",
    "Live Content API (LCAPI)",
    "Real-time"
  ],
  "bugs": {
    "url": "https://github.com/jazsouf/sanity-photon/issues"
  },
  "homepage": "https://github.com/jazsouf/sanity-photon#readme",
  "workspaces": [
    "studio",
    "storefront"
  ],
  "devDependencies": {
    "@sanity/template-validator": "^2.4.3",
    "concurrently": "^9.1.2"
  }
}
